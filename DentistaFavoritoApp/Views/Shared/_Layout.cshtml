<!DOCTYPE html>
<html ng-app="DentistaApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TuDentista</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="navbar navbar-blue navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tu Dentista Favorito", "Index", "Home", new { area = "" }, new { @class = "navbar-brand black-font" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <div class="container body-content">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="#" class="list-group-item active">
                        Menu
                    </a>
                    <a href="@Url.Action("Index","Paciente")" class="list-group-item"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Pacientes</a>
                    <a href="@Url.Action("CrearPaciente","Paciente")" class="list-group-item"> <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Agregar Paciente</a>
                    <a href="@Url.Action("Index","Tratamiento")" class="list-group-item"> <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Tratamientos</a>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>

        </div>
       
        <hr />
       
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>